<div class="container mt-5">
  <h2 class="mb-4">Dashboard</h2>

  <% if current_user.super_admin? %>
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Users</h5>
            <p class="card-text fs-4"><%= @total_users %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Organizations</h5>
            <p class="card-text fs-4"><%= @total_organizations %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-white bg-success mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Channels</h5>
          <p class="card-text fs-4"><%= @total_channels %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-info mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Videos</h5>
          <p class="card-text fs-4"><%= @total_videos %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-dark mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Members</h5>
          <p class="card-text fs-4"><%= @total_members %></p>
        </div>
      </div>
    </div>
  </div>

  <h4 class="mt-4">Video Age Distribution</h4>
  <div class="row">
    <div class="col-md-4">
      <div class="card border-primary mb-3">
        <div class="card-body">
          <h5 class="card-title text-primary">Child Videos (≤12)</h5>
          <p class="card-text fs-4"><%= @child_videos %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-warning mb-3">
        <div class="card-body">
          <h5 class="card-title text-warning">Teen Videos (13–17)</h5>
          <p class="card-text fs-4"><%= @teen_videos %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-danger mb-3">
        <div class="card-body">
          <h5 class="card-title text-danger">Videos (18+)</h5>
          <p class="card-text fs-4"><%= @adult_videos %></p>
        </div>
      </div>
    </div>
    <div class="mt-4">
      <%= link_to "My Channels", channels_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "My Videos", videos_path, class: "btn btn-outline-success me-2" %>
      <%= link_to "My Organization", organizations_path(@organization), class: "btn btn-outline-info" %>
    </div>
  </div>
</div>
