<%= form_with model: user, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :role %>
    <%= f.select :role, [["Super Admin", "super_admin"], ["Admin", "admin"], ["User", "user"]], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :organization_id %>
    <%= f.collection_select :organization_id, Organization.all, :id, :name, { include_blank: true }, class: "form-select" %>
  </div>

  <% if f.object.new_record? %>
    <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
